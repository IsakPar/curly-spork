{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@arqivo/config": ["packages/config/src/index.ts"],
      "@arqivo/transport": ["packages/transport/src/index.ts"]
    }
  },
  "include": ["packages/**/*.ts", "apps/**/*.ts", "services/**/*.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}

